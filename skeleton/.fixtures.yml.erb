fixtures:
  repositories:
    stdlib:
      repo: "https://github.com/puppetlabs/puppetlabs-stdlib.git"
      ref: "4.12.0"
<% if metadata.name.start_with?('role_') %> 
# role module layout, include profile base and ntp module
    profile_base: "https://github.com/relybv/<%= metadata.full_module_name.sub(metadata.name, "profile_base") %>.git"
    rspec_monitor: "git://github.com/pgomersbach/test-rspec_monitor.git"
    ntp:
      repo: "https://github.com/puppetlabs/puppetlabs-ntp.git"
      ref: "4.2.0"
<% elsif metadata.name.start_with?('profile_') %>
# profile module layout, default include ntp module
    rspec_monitor: "git://github.com/pgomersbach/test-rspec_monitor.git"
    ntp:
      repo: "https://github.com/puppetlabs/puppetlabs-ntp.git"
      ref: "4.2.0"
<% else %> 
# default module layout
<% end %>
  symlinks:
    <%= metadata.name %>: "#{source_dir}"
